<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/timeStamp_ph"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_margin = "20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shimmer_shape"
        />
    <View
        android:id="@+id/day_night_ph"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/timeStamp_ph"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shimmer_shape"
        />
    <View
        android:id="@+id/day_temp_ph"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/day_night_ph"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shimmer_shape"
        />


    <View
        android:id="@+id/icon_ph"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/day_temp_ph"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shimmer_shape"
        />


    <View
        android:id="@+id/probability_ph"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/shimmer"
        />
    <View
        android:id="@+id/recycler_ph"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/probability_ph"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_diagram_placeholder"
        />
</androidx.constraintlayout.widget.ConstraintLayout>